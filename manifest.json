
{
  "manifest_version": 3,
  "name": "Ad Remover",
  "version": "2.1",
  "description": "Ultimate Adblocker with YouTube support âš¡",
  "permissions": ["declarativeNetRequest"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "declarative_net_request": {
    "rule_resources": [{
      "id": "ads",
      "enabled": true,
      "path": "rules.json"
    }]
  },
  "content_scripts": [{
    "matches": ["*://*.youtube.com/*"],
    "js": ["contentScript.js"],
    "run_at": "document_start"
  }],
  "icons": {
    "128": "icons/128.png"
  }
}